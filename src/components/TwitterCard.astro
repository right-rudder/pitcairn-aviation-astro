---
// TwitterCard.astro - Enhanced Twitter sharing metadata
interface Props {
  title: string;
  description: string;
  image: string;
  cardType?: 'summary' | 'summary_large_image';
  twitterUsername?: string;
  url?: string;
}

const {
  title,
  description,
  image,
  cardType = 'summary_large_image',
  twitterUsername = '@pitcairnaviation',
  url = Astro.url
} = Astro.props;

// Ensure image has absolute URL
const absoluteImageUrl = image.startsWith('http') 
  ? image 
  : new URL(image, Astro.url).toString();
---

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content={cardType} />
<meta name="twitter:site" content={twitterUsername} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImageUrl} />
<meta name="twitter:image:alt" content={`Image for ${title}`} />
<meta name="twitter:url" content={url} />
<meta name="twitter:domain" content="pitcairnaviation.com" />
<meta name="twitter:creator" content={twitterUsername} />
<meta name="twitter:label1" content="Aviation Services" />
<meta name="twitter:data1" content="Heritage Field Airport (KPTW)" />